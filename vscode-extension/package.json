{
  "name": "jarvis-ai-assistant",
  "displayName": "JARVIS AI Assistant",
  "description": "AI-powered coding assistant for VS Code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:jarvis.generateCode",
    "onCommand:jarvis.explainCode",
    "onCommand:jarvis.fixBugs",
    "onCommand:jarvis.refactor"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jarvis.generateCode",
        "title": "JARVIS: Generate Code"
      },
      {
        "command": "jarvis.explainCode",
        "title": "JARVIS: Explain Code"
      },
      {
        "command": "jarvis.fixBugs",
        "title": "JARVIS: Fix Bugs"
      },
      {
        "command": "jarvis.refactor",
        "title": "JARVIS: Refactor Code"
      },
      {
        "command": "jarvis.askQuestion",
        "title": "JARVIS: Ask Question"
      }
    ],
    "keybindings": [
      {
        "command": "jarvis.generateCode",
        "key": "ctrl+shift+j",
        "mac": "cmd+shift+j"
      },
      {
        "command": "jarvis.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "jarvis.explainCode",
          "when": "editorHasSelection",
          "group": "jarvis"
        },
        {
          "command": "jarvis.fixBugs",
          "when": "editorHasSelection",
          "group": "jarvis"
        },
        {
          "command": "jarvis.refactor",
          "when": "editorHasSelection",
          "group": "jarvis"
        }
      ],
      "commandPalette": [
        {
          "command": "jarvis.generateCode"
        },
        {
          "command": "jarvis.explainCode"
        },
        {
          "command": "jarvis.fixBugs"
        },
        {
          "command": "jarvis.refactor"
        },
        {
          "command": "jarvis.askQuestion"
        }
      ]
    },
    "configuration": {
      "title": "JARVIS",
      "properties": {
        "jarvis.apiUrl": {
          "type": "string",
          "default": "http://localhost:5000",
          "description": "JARVIS API URL"
        },
        "jarvis.apiKey": {
          "type": "string",
          "default": "",
          "description": "JARVIS API Key (optional)"
        },
        "jarvis.autoExplain": {
          "type": "boolean",
          "default": false,
          "description": "Automatically explain code on selection"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
